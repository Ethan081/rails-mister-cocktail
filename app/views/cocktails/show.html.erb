<div class="container">

  <div class="text-center">
    <h1><%= @cocktail.name %></h1>
  </div>
   <% if @cocktail.photo? %>
     <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
   <% end %>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <% if dose.persisted? %>
        <li>
          <%= dose.description %> <%= dose.ingredient.name %>
          <%= link_to "&times;".html_safe, dose_path(dose), method: :delete, class: "btn btn-danger" %>
        </li>
      <% end %>
    <% end %>
  </ul>

  <p>
    <%= render "doses/form", cocktail: @cocktail, dose: @dose%>
  </p>

  <div class="text-center">
    <%= link_to 'Back', root_path, class: "btn btn-primary" %>
  </div>

</div>

